<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="104dp"
    android:layout_marginLeft="5dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_activity_sort_goods_listview_cell_shoppingcar"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/splb_gouwuche" />

    <View
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:background="#b3b2a8" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_activity_sort_goods_listview_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:paddingRight="5dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_activity_sort_goods_listview_title_comment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="marquee"
            android:lines="2"
            android:paddingRight="5dp"
            android:textColor="@color/small_title"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:text="ï¿¥ "
                android:textColor="#e24553"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_activity_sort_goods_listview_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="1000"
                android:textColor="#e24553"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/_judge"
                android:textColor="#848484"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_activity_sort_goods_listview_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/_judge_number"
                android:textColor="#848484"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_activity_sort_goods_listview"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:scaleType="centerCrop" />

</LinearLayout>