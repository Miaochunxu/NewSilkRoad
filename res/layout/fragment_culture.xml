<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="49.5dp"
        android:background="#ffffff"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/_cultrue_spread"
        android:textColor="#000000"
        android:textSize="20sp" />

    <com.fangshuoit.pulltorefresh.library.PullToRefreshScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/newcustomscrollview_fragment_culture"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:scrollbars="none"
        ptr:ptrMode="both" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.fangshuoit.view.MyAbSlidingPlayView
                android:id="@+id/ab_fragment_culture"
                android:layout_width="fill_parent"
                android:layout_height="150dp" >
            </com.fangshuoit.view.MyAbSlidingPlayView>

            <View
                android:layout_width="fill_parent"
                android:layout_height="8dp"
                android:background="#eeeeee" />

            <com.fangshuoit.view.MultiListView
                android:id="@+id/lv_fragment_culture"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:listSelector="#00000000"
                android:scrollbars="none" >
            </com.fangshuoit.view.MultiListView>
        </LinearLayout>
    </com.fangshuoit.pulltorefresh.library.PullToRefreshScrollView>

</LinearLayout>