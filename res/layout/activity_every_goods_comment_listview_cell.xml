<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/img_activity_every_goods_comment_listcell_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_activity_every_goods_comment_listcell_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="2015-06-16"
            android:textColor="@color/small_title"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_activity_every_goods_comment_listcell_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/img_activity_every_goods_comment_listcell_img"
            android:lines="1"
            android:text="泡泡蛋蛋"
            android:textColor="@color/small_title"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/viewlines" />

    <TextView
        android:id="@+id/tv_activity_every_goods_comment_listcell_context"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:text="蛋蛋蛋蛋蛋蛋蛋蛋"
        android:textSize="13sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:text="型号：0001"
        android:textColor="@color/small_title"
        android:textSize="11sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:text="购买日期：2015-06-01"
        android:textColor="@color/small_title"
        android:textSize="11sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:background="@color/viewlines" />

</LinearLayout>