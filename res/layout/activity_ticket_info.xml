<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="49.5dp"
        android:background="#ffffff" >

        <ImageView
            android:layout_width="13dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/nav_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="@string/_ticket_detail"
            android:textColor="#000000"
            android:textSize="20sp" />
    </RelativeLayout>

    <com.fangshuoit.view.NewCustomScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.ab.view.sliding.AbSlidingPlayView
                android:id="@+id/mySlidingPlayView"
                android:layout_width="fill_parent"
                android:layout_height="120dip" >
            </com.ab.view.sliding.AbSlidingPlayView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/_newsilkroad_museum"
                android:textSize="24sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#cbcbcb" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ima_dizhitubiao" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="@string/_ningxia_address"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lines"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ima_shijiantubiao" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:textSize="15sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="65dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/_price"
                    android:textSize="25sp" />

                <ImageView
                    android:id="@+id/piao_one"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/imageView_two"
                    android:src="@drawable/ima_piaojia" />

                <TextView
                    android:id="@+id/tv_ticketinfo_style_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/piao_one"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="@string/_adult_ticket"
                    android:textColor="#d14c79"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/img_ticketinfo_price_yyone"
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/tv_ticketinfo_style_one"
                    android:src="@drawable/yy" />

                <TextView
                    android:id="@+id/tv_ticketinfo_price_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="1dp"
                    android:layout_toRightOf="@id/img_ticketinfo_price_yyone"
                    android:text="100"
                    android:textColor="#d14c79"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/imageView_two"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ima_piaojia" />

                <TextView
                    android:id="@+id/tv_ticketinfo_style_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/imageView_two"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="@string/_family_ticket"
                    android:textColor="#d14c79"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/img_ticketinfo_price_yytwo"
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/tv_ticketinfo_style_two"
                    android:src="@drawable/yy" />

                <TextView
                    android:id="@+id/tv_ticketinfo_price_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="1dp"
                    android:layout_toRightOf="@id/img_ticketinfo_price_yytwo"
                    android:text="500"
                    android:textColor="#d14c79"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#cbcbcb" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#f2f2f2" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#cbcbcb" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="55dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:text="@string/_user_judge"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/zy_jiantou" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#cbcbcb" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="缪春旭"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:lineSpacingMultiplier="1.5"
                    android:text="赶脚还是很nice的，就是天气有点冷啊，受不鸟，一直都是挤公交车来的，我要把BRT包下来"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="2015-05-08"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/miaolines" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="@drawable/miaotext" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/miaolines" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="10dp"
                    android:text="@string/_silkroad_recom"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:src="@drawable/appstart" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:src="@drawable/appstart" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:src="@drawable/appstart" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/miaolines" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="@drawable/miaotext" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_btn_xiamian"
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:background="@drawable/btn_lianxifangshi" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/btn_queren"
                    android:text="@string/_bespoke"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>
    </com.fangshuoit.view.NewCustomScrollView>

</LinearLayout>