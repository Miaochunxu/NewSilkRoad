<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_ticket_buy"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="2dp"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="135dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp" >

            <TextView
                android:id="@+id/tv_tivket_buy_big"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="6dp"
                android:lines="1"
                android:text="@string/_beike_dream_world"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_tivket_buy_small"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv_tivket_buy_big"
                android:lines="2"
                android:text="海底贝壳万花筒就此绽放"
                android:textColor="@color/small_title"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/yy" />

                <TextView
                    android:id="@+id/tv_tivket_buy_price"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="30"
                    android:textColor="#e24553"
                    android:textSize="23sp" />
            </LinearLayout>
        </RelativeLayout>

        <Button
            android:layout_width="80dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/activity_ticket_btn_buy"
            android:focusable="false"
            android:text="@string/_activity_ticket_btn_buy"
            android:textColor="#e24553"
            android:textSize="13sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/miaotext" />

</LinearLayout>